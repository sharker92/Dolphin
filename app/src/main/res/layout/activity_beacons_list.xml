<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sharkstech.dolphin.activities.BeaconsActivity">

    <ImageView
        android:id="@+id/imageViewBeacon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_bluetooth"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="26dp" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="@+id/imageViewBeacon"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBeacon"
        android:layout_marginBottom="8dp"
        android:textSize="16dp"
        app:layout_constraintVertical_bias="0.461"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageViewBeacon"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.14"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textViewTx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="@+id/imageViewBeacon"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewName"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/textViewTxP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewTx"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewTx"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textViewRssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintRight_toRightOf="@+id/textViewTx"
        app:layout_constraintLeft_toLeftOf="@+id/textViewTx"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTx" />

    <TextView
        android:id="@+id/textViewRssiI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewRssi"
        app:layout_constraintRight_toRightOf="@+id/textViewTxP"
        app:layout_constraintLeft_toLeftOf="@+id/textViewTxP"
        app:layout_constraintHorizontal_bias="0.0" />


    app:layout_constraintLeft_toRightOf="@+id/imageViewBeacon"
        android:layout_marginLeft="32dp" />
</android.support.constraint.ConstraintLayout>